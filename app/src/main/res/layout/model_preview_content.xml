<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

      <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_small">

            <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="horizontal"
                  android:weightSum="1">
                  <androidx.cardview.widget.CardView
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        app:cardBackgroundColor="@color/colorPrimaryDark"
                        app:cardMaxElevation="3dp"
                        app:cardElevation="2dp">

                        <TextView
                              android:id="@+id/preview_question_number"
                              android:layout_width="70dp"
                              android:layout_height="match_parent"
                              android:paddingStart="@dimen/dimen_default"
                              android:paddingTop="@dimen/dimen_small"
                              android:padding="@dimen/dimen_small"
                              android:paddingEnd="@dimen/dimen_small"
                              android:text="TextView"
                              android:gravity="center"
                              android:textColor="@color/colorWhite"
                              />

                  </androidx.cardview.widget.CardView>

                  <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                              android:id="@+id/preview_question"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:paddingStart="@dimen/dimen_default"
                              android:paddingEnd="@dimen/dimen_small"
                              android:paddingTop="@dimen/dimen_default"
                              android:text="TextView"
                              android:textColor="@color/colorBack"
                              />

                        <EditText
                              android:id="@+id/preview_answer"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:paddingStart="@dimen/dimen_default"
                              android:paddingTop="@dimen/dimen_small"
                              android:paddingEnd="@dimen/dimen_default"
                              android:paddingBottom="@dimen/dimen_small"
                              android:textColor="@color/colorBack"
                              android:textStyle="bold"
                              android:inputType="text"
                              android:background="@color/colorWhite"
                               />

                  </LinearLayout>
            </LinearLayout>

      </androidx.cardview.widget.CardView>

      <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:layout_marginStart="@dimen/dimen_default"
            android:layout_marginEnd="@dimen/dimen_default"
            android:background="@android:color/transparent" />

</LinearLayout>